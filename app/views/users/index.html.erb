
<% if signed_in? && current_user.admin? %>
  <div class="span-12">
    <h1>New user</h1>
    <%= form_for(@user, :remote => true) do |f| %>
      <%= render 'form', :f => f %>
      <div class="actions">
        <%= f.submit %>
      </div>
    <% end %>
  </div>
<% end %>

<div class="span-24">
  <h1>Listing users</h1>
  <table>
    <tr id="users">
      <th>Name</th>
      <th>Email</th>
      <th>Membership</th>
      <th>Options</th>
    </tr>
      <%= render @users %><!-- it knows to render _user.html.erb -->
  </table>
  <div class="span-8">
    <%= link_to 'New User', new_user_path %>
  </div>
</div>

